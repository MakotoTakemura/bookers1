<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>

 <% if @book.errors.any? %>
  <div class="miss">
   <p><%= @book.errors.count %>error prohibited this book from being saved:</p>
   <ul>
     <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
     <% end %>
   </ul>
  </div>
 <% end %>

  <label>Title</label>
  <div class="form"><%= f.text_field :title %></div>

  <label>Body</label>
  <div class="form"><%= f.text_area :body %></div>

  <div class="form submit"><%= f.submit 'Update Book' %></div>
<% end %>

<p class="link">
  <%= link_to "Show", "/books/#{@book.id}" %>
  |
  <%= link_to "Back", "/books" %>
</p>

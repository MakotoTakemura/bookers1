<div class="success"><%= flash[:notice] %></div>

<h1>Books</h1>
<table cellspacing="7px">
  <tr class="table-top">
    <th><strong>Title</strong></th>
    <th><strong>Body</strong></th>
  </tr>
 <% @books.each do |book| %>
 <tr class="books-cell">
   <th class="title-cell"><%= book.title %></th>
   <th class="body-cell"><%= book.body %></th>
   <th><%= link_to "Show", "/books/#{book.id}" %></th>
   <th><%= link_to "edit", "/books/#{book.id}/edit" %></th>
   <th><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></th>
 </tr>
 <% end %>
</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

 <% if @book.errors.any? %>
   <div class="miss">
     <p><%= @book.errors.count %>error prohibited this book from being saved:</p>
     <ul>
       <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

  <label>Title</label>
  <div class="form"><%= f.text_field :title %></div>

  <label>Body</label>
  <div class="form"><%= f.text_area :body %></div>

  <div class="form submit"><%= f.submit 'Create Book' %></div>

<% end %>